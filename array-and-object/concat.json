{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"array1": {
			"type": "array",
			"defaultValue": [
				"1a",
				"1b",
				"1c"
			]
		},
		"array2": {
			"type": "array",
			"defaultValue": [
				"2a",
				"2b",
				"2c"
			]
		}
	},
	"variables": {},
	"resources": [],
	"outputs": {
		"concatOutput": {
            "type": "array",
            "value": "[concat(parameters('array1'), parameters('array2'))]"
        }
	}
}